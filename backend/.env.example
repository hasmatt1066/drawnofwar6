# Backend Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://production-domain.com,https://staging-domain.com

# PixelLab API Configuration
PIXELLAB_API_KEY=your-pixellab-api-key-here
PIXELLAB_API_URL=https://api.pixellab.ai/v1

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_API_URL=https://api.anthropic.com/v1
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1024
ANTHROPIC_TIMEOUT_MS=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=drawn-of-war
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_DATABASE_URL=https://drawn-of-war.firebaseio.com
FIREBASE_STORAGE_BUCKET=drawn-of-war.appspot.com
# Set to 'true' to use Firebase emulator suite for local development
USE_FIREBASE_EMULATOR=true

# Queue Configuration
MAX_QUEUE_SIZE=500
QUEUE_WARNING_THRESHOLD=400
USER_CONCURRENCY_LIMIT=5

# Cache Configuration
CACHE_TTL_DAYS=30
DEDUPLICATION_WINDOW_MS=10000

# Timeout Configuration (in milliseconds)
TIMEOUT_16PX=300000
TIMEOUT_32PX=480000
TIMEOUT_48PX=600000
TIMEOUT_64PX=720000
TIMEOUT_128PX=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_FLAG_ENABLE_ANIMATIONS=true
FEATURE_FLAG_ENABLE_BATTLES=true
FEATURE_FLAG_ENABLE_CACHE_WARM_UP=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
# JWT_SECRET=your-secret-key-here (post-MVP for authentication)
# SESSION_SECRET=your-session-secret-here (post-MVP)