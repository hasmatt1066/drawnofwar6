# Root environment variables (not used directly, see backend/.env.example and frontend/.env.example)
# This file serves as a reference for all environment variables in the project

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# PixelLab API Configuration
PIXELLAB_API_KEY=your-pixellab-api-key-here
PIXELLAB_API_URL=https://api.pixellab.ai/v1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Firebase Configuration
FIREBASE_PROJECT_ID=drawn-of-war
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_DATABASE_URL=https://drawn-of-war.firebaseio.com
# Set to 'true' to use Firebase emulator suite for local development
USE_FIREBASE_EMULATOR=true

# Queue Configuration
MAX_QUEUE_SIZE=500
QUEUE_WARNING_THRESHOLD=400
USER_CONCURRENCY_LIMIT=5

# Cache Configuration
CACHE_TTL_DAYS=30
DEDUPLICATION_WINDOW_MS=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags (MVP)
FEATURE_FLAG_ENABLE_ANIMATIONS=true
FEATURE_FLAG_ENABLE_BATTLES=true
FEATURE_FLAG_ENABLE_CACHE_WARM_UP=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================

# Backend API URL
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Firebase Configuration (Frontend)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=drawn-of-war.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=drawn-of-war
VITE_FIREBASE_STORAGE_BUCKET=drawn-of-war.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Environment
VITE_ENV=development

# Feature Flags (Frontend)
VITE_FEATURE_FLAG_ENABLE_ANIMATIONS=true
VITE_FEATURE_FLAG_ENABLE_BATTLES=true

# Analytics (Post-MVP)
VITE_GA_TRACKING_ID=