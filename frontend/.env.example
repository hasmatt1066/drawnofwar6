# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Firebase Configuration (Frontend)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=drawn-of-war.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=drawn-of-war
VITE_FIREBASE_STORAGE_BUCKET=drawn-of-war.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Environment
VITE_ENV=development

# Feature Flags
VITE_FEATURE_FLAG_ENABLE_ANIMATIONS=true
VITE_FEATURE_FLAG_ENABLE_BATTLES=true

# Analytics (Post-MVP)
VITE_GA_TRACKING_ID=

# Debug Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info