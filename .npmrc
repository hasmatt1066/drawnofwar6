# pnpm configuration
# Ensures consistent dependency installation and hoisting behavior

# Use the workspace protocol for local packages
link-workspace-packages=true

# Prevent automatic updates during install
save-exact=true

# Hoist common dependencies to root node_modules for efficiency
shamefully-hoist=true
hoist-pattern[]=*eslint*
hoist-pattern[]=*prettier*
hoist-pattern[]=*typescript*

# Strict peer dependency checking
strict-peer-dependencies=false

# Faster installs by skipping optional dependencies
optional=false